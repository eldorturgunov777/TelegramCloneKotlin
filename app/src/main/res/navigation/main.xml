<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    app:startDestination="@id/menuProfile">

    <fragment
        android:id="@+id/menuProfile"
        android:name="com.example.telegramclonekotlin.fragment.ProfileFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/menuContacts"
        android:name="com.example.telegramclonekotlin.fragment.ContactsFragment"
        android:label="Contacts"
        tools:layout="@layout/fragment_contacts" />
    <fragment
        android:id="@+id/menuNotifications"
        android:name="com.example.telegramclonekotlin.fragment.NotificationsFragment"
        android:label="Notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/menuAppearance"
        android:name="com.example.telegramclonekotlin.fragment.AppearanceFragment"
        android:label="Appearance"
        tools:layout="@layout/fragment_appearance" />
    <fragment
        android:id="@+id/menuSettings"
        android:name="com.example.telegramclonekotlin.fragment.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/menuInfo"
        android:name="com.example.telegramclonekotlin.fragment.InfoFragment"
        android:label="Info"
        tools:layout="@layout/fragment_info" />
</navigation>